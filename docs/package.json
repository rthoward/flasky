{
    "license": "UNLICENSED",
    "scripts": {
      "build": "redoc-cli bundle --title 'flasky' -o index.html openapi.yaml",
      "serve": "redoc-cli serve openapi.yaml",
      "dump": "js-yaml openapi.yaml > openapi.json",
      "lint": "speccy lint --skip parameter-description --skip info-contact openapi.yaml",
      "format": "prettier --write openapi.yaml",
      "format:check": "prettier --list-different openapi.yaml"
    },
    "devDependencies": {
      "js-yaml": "^3.13.1",
      "prettier": "^1.15.3",
      "redoc-cli": "^0.8.3",
      "speccy": "^0.9.0"
    }
  }
  